super + Return
    $TERMINAL
super + shift + w
    $BROWSER
super + shift + p
    passmenu -i
Print 
    maim -s | xclip -sel clipboard -t image/png
Print + shift
   maim -s ~/Downloads/$(date +%s).png
super + shift + d
   pause_notification
super + shift + n
   mons -n left && restart_xmonad
